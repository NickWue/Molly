{
	"manifest_version": 2,
	"name": "Molly - Chrome Assisant",
	"short_name": "Molly",
	"version": "0.1",
	
	"default_locale": "en",
	"description": "Molly is an intelligent chrome assisant. You can ask her what you want to know. But don't worry, your data is yours!",
	
	"chrome_url_overrides" : {
		"newtab": "start.html"
	},
	"background": {
		"scripts": ["ressourcen/js/background.js"]
	  },
		
	"author": "NickW.de",
	
	"content_security_policy":"script-src 'self' 'unsafe-eval' https://nickw.de; object-src",
	"browser_action": {
		"default_title": "Molly Assisant",      
		"default_popup": "ressourcen/html/popup.html"      
	},
	"options_page": "ressourcen/html/options.html",
	"permissions": [
		"storage",
		"chrome://favicon/*",
		"chrome://extension-icon/*",
		"topSites",
		"https://nickw.de/bestnewtab/*",
		"tabs",
		"tts",
		"geolocation"
	],
	 "commands": {
          "toggle-feature-foo": {
            "suggested_key": {
              "default": "Ctrl+Shift+Y",
              "mac": "Command+Shift+Y"
            },
            "description": "Open Molly"
          },
          "_execute_page_action": {
            "suggested_key": {
              "default": "Ctrl+Shift+E",
              "windows": "Alt+Shift+P",
              "mac": "Alt+Shift+P"
            }
          }
        },
	"optional_permissions": [ 
		"http://www.google.com/",
		"bookmarks",
		"sessions",
		"history",
		"alarms",
		"downloads",
		"https://news.google.com/*",
		"https://www.facebook.com/*",
		"https://mail.google.com/mail",
		"management",
		"http://iheartquotes.com/api/v1/random",
		"system.cpu",
		"http://api.openweathermap.org/data/2.5/*",
		"system.memory",
		"*://*/*"
	]
}
